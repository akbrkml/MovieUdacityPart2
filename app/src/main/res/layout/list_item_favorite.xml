<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/extra_small_padding"
    android:layout_margin="@dimen/small_margin"
    app:cardElevation="@dimen/extra_small_padding">

    <ImageView
        android:id="@+id/image_view_backdrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_backdrop_height"
        android:scaleType="centerCrop"
        tools:src="@drawable/backdrop" />

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?android:selectableItemBackground"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:padding="@dimen/large_padding"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="22sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/extra_large_margin"
                android:layout_height="@dimen/extra_large_margin"
                android:padding="@dimen/small_padding"
                android:src="@drawable/rating" />

            <TextView
                android:id="@+id/text_view_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:fontFamily="sans-serif"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/extra_large_margin"
                android:layout_height="@dimen/extra_large_margin"
                android:padding="@dimen/small_padding"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/text_view_vote_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:fontFamily="sans-serif"
                android:textColor="#fff"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right|end"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin">

            <ImageView
                android:layout_width="@dimen/extra_large_margin"
                android:layout_height="@dimen/extra_large_margin"
                android:padding="@dimen/small_padding"
                android:src="@drawable/calendar_white" />

            <TextView
                android:id="@+id/text_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:fontFamily="sans-serif"
                android:textColor="#fff"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>